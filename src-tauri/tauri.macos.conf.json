{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SeSe LuLu Translator",
  "version": "1.0.2",
  "identifier": "xyz.lncvrt.seselulu",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SeSe LuLu Translator",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "maxWidth": 1280,
        "maxHeight": 720,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "macOS": {
      "minimumSystemVersion": "12.7.4"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
